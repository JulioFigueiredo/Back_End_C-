@model ProductCategoryViewModel

@{
    ViewData["Title"] = "Stock Manager";
}

<h1 class="page-title">Stock Manager - Cafeteria</h1>

<p>
    <a asp-action="Create" class="btn-create">Create New</a>
</p>

<form asp-controller="Products" asp-action="Index" method="get">
    <p>
        <select asp-for="ProductCategory" asp-items="Model.Categories">
            <option value="">All</option>
        </select>

        <label>Name: <input type="text" name="searchString" /></label>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="edit-link">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="details-link">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="delete-link">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>